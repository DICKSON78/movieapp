<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Orange"
    tools:context=".HomeActivity"
    tools:ignore="MissingClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/bannerSlider"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:iss_auto_cycle="true"
                app:iss_no_dots="true"
                app:iss_placeholder="@color/Orange"
                app:iss_error_image="@color/Orange"
                app:iss_delay="0"
                app:iss_period="2000"
                app:iss_corner_radius="5" />

            <TextView
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="39dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:text="Name"
                android:textColor="@color/whitegray"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/person_icon"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout"
                style="@android:style/Widget.Button"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginTop="34dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/rate_btn"
                android:drawableStart="@drawable/back_icon"
                android:elevation="30dp"
                android:fontFamily="@font/poppins"
                android:paddingStart="9dp"
                android:textColor="@color/whitegray"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/dots_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:layout_marginTop="189dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:padding="8dp" />

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="-100dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rating_year_age_container"
                android:background="@drawable/rate_btn"
                android:padding="16dp">

                <TextView
                    android:id="@+id/movieRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.6"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/movieYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/movie_age_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12+"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                style="@android:style/Widget.Button"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/play_button"
                android:paddingStart="175dp"
                android:elevation="30dp"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Latest"
                        android:background="@drawable/subscribe_btn"
                       android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/whitegray"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Tv Shows"
                        android:background="@drawable/subscribe_btn"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/whitegray"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/subscribe_btn"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:layout_marginLeft="10dp"
                        android:text="Upcoming"
                        android:textColor="@color/whitegray"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Continue Watching"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/video_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Latest Videos"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/latest_videos_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="9dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/rabel" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="9dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/az" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVie3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="9dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/avatar" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView4"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="9dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/rabel" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>